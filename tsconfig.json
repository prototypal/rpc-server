  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "paths": {
      "formats/*": ["src/formats/*"]
    }
  },
  "include": ["src/**/*"]
}
